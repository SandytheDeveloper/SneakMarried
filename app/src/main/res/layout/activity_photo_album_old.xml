<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".PhotoAlbumOldActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:visibility="invisible"
        app:placeholderImage="@color/color_base_grey" />

    <com.commonfriend.custom.CustomHeader
        android:id="@+id/customHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/rlFirstScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customHeader"
        android:visibility="visible">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/buttonView"
            android:layout_marginHorizontal="@dimen/_20sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/llPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:src="@drawable/ic_gray_privacy"
                        android:tint="@color/color_grey" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/shieldMessage"
                        style="@style/Text10SatoshiMediumGrayStyle"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="@string/visible_to_your_recommendations_only"
                        android:textColor="@color/color_grey" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDrag"
                    style="@style/Text10RegularGrayStyle"
                    android:layout_below="@+id/llPrivacy"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/drag_to_reorder"
                    android:visibility="invisible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtDrag"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp" />

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/buttonView"
            layout="@layout/bottom_view" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlSecondScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customHeader"
        android:visibility="gone">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!--            <com.facebook.drawee.view.SimpleDraweeView-->
                <!--                android:id="@+id/imgProfile"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="@dimen/_160sdp"-->
                <!--                android:layout_marginTop="@dimen/_10sdp"-->
                <!--                android:adjustViewBounds="true"-->
                <!--                app:actualImageResource="@drawable/dr_home_shimmer"-->
                <!--                app:roundedCornerRadius="@dimen/_10sdp" />-->

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/color_base_grey"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/llRecycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtQues"
                        style="@style/Text40RegularBlackStyle"
                        android:fontFamily="@font/satoshi_regular"
                        android:text="@string/which_one_is_you"
                        android:textSize="@dimen/_20sdp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvImageList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:itemCount="1"
                        tools:listitem="@layout/raw_error_image_item" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>


</RelativeLayout>