<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMainView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/color_light_blue"
    app:cardCornerRadius="@dimen/_14sdp"
    app:strokeWidth="@dimen/_1sdp">

    <RelativeLayout
        android:id="@+id/rlMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/llText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_toStartOf="@id/imgSelected"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtName"
                style="@style/Text26RegularBlackStyle"
                android:layout_marginTop="@dimen/_minus3sdp"
                android:gravity="start"
                android:layout_width="@dimen/_180sdp"
                android:maxLines="2"
                android:paddingVertical="@dimen/_1sdp"
                android:paddingStart="@dimen/_1sdp"
                android:singleLine="false"
                android:text="Manoj Patel Pai" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtNumber"
                style="@style/Text10RegularGrayStyle"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="99986562198" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSelected"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_alignBottom="@+id/llText"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/ic_purple_dot" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>