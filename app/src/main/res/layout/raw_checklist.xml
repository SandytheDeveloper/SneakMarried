<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_4sdp">

    <RelativeLayout
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/checkbox"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:src="@drawable/dr_ic_sqaure_unfill" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtName"
            style="@style/Text14BlueStyle"
            android:textColor="@color/color_black"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_toEndOf="@+id/checkbox"
            android:text="@string/mumbai" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/dr_bg_sky"
        android:visibility="gone"
        android:padding="@dimen/_4sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSelectedSurname"
            style="@style/Text12RegularDarkGreyStyle"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:paddingHorizontal="@dimen/_4sdp"
            android:text="@string/hindu" />

        <ImageView
            android:id="@+id/btnRemove"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/txtSelectedSurname"
            android:src="@drawable/ic_close" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_4sdp"
        android:visibility="gone"
        android:background="@drawable/dr_bg_sky_circle">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSuggestedSurname"
            style="@style/Text12RegularGrayStyle"
            android:layout_gravity="center_vertical"
            android:text="@string/hindu"/>

    </LinearLayout>

</RelativeLayout>