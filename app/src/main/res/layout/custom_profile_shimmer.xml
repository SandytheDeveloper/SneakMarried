<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:paddingHorizontal="@dimen/_20sdp">

    <RelativeLayout
        android:id="@+id/simpleDraweeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simpleDraweeView3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_toStartOf="@+id/profile"
            app:placeholderImage="@color/color_base_grey"
            app:roundedCornerRadius="@dimen/_8sdp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/profile"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentEnd="true"
            app:placeholderImage="@color/color_base_grey"
            app:roundAsCircle="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/simpleDraweeView"
        tools:layout_editor_absoluteX="28dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="TooManyViews">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgProfile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1.1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:placeholderImage="@color/color_base_grey"
                app:placeholderImageScaleType="fitXY"
                app:roundedCornerRadius="@dimen/_10sdp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:placeholderImage="@color/color_base_grey"
            app:roundedCornerRadius="@dimen/_4sdp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:placeholderImage="@color/color_base_grey"
            app:roundedCornerRadius="@dimen/_8sdp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:placeholderImage="@color/color_base_grey"
            app:roundedCornerRadius="@dimen/_8sdp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:placeholderImage="@color/color_base_grey"
            app:roundedCornerRadius="@dimen/_4sdp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:placeholderImage="@color/color_base_grey"
            app:roundedCornerRadius="@dimen/_4sdp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:placeholderImage="@color/color_base_grey"
            app:roundedCornerRadius="@dimen/_4sdp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:placeholderImage="@color/color_base_grey"
            app:roundedCornerRadius="@dimen/_4sdp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
