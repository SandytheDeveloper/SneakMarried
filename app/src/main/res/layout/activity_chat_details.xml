<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    android:visibility="visible"
    tools:context=".ChatDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlHeaderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/innerHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgBack"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/dr_ic_left" />


                <RelativeLayout
                    android:id="@+id/llProfile"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/imgBack">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/imgProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:placeholderImage="@color/color_base_grey"
                        app:roundAsCircle="true"
                        app:roundedCornerRadius="@dimen/_40sdp" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/imgCommonFriendProfile"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_alignEnd="@+id/imgProfile"
                        android:layout_alignBottom="@+id/imgProfile"
                        app:actualImageResource="@drawable/ic_chat_face_with_border"
                        app:roundingBorderWidth="@dimen/_1sdp"
                        android:visibility="gone"
                        app:roundAsCircle="true" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtUserInits"
                        style="@style/Text18RegularPurpleStyle"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llNames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/imgUnmatch"
                    android:layout_toEndOf="@id/llProfile"
                    android:visibility="invisible"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtSenderName"
                        style="@style/Text14BlackStyle"
                        android:layout_width="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:singleLine="true" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtTyping"
                        style="@style/Text10RegularPurpleStyle"
                        android:layout_width="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:textColor="@color/color_grey"
                        android:textSize="@dimen/_9sdp"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtGroupNames"
                        style="@style/Text10RegularPurpleStyle"
                        android:layout_width="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:visibility="gone"
                        android:textColor="@color/color_grey"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgUnmatch"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/dr_ic_unmatch" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/innerHeader"
                android:background="@color/color_light_grey" />

        </RelativeLayout>

        <!--Chet List View-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llBottomView">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvChatList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    tools:listitem="@layout/row_chat_list" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <RelativeLayout
                android:id="@+id/llBottomView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/color_white"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtMessage"
                    style="@style/EditTextParentStyle"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/btnSend"
                    android:background="@drawable/chat_card_left_bg"
                    android:hint="@string/send_them_a_message"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_light_grey" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btnSend"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_alignBottom="@+id/edtMessage"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:src="@drawable/dr_ic_btn_send" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>