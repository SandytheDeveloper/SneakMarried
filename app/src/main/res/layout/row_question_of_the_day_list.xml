<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/color_white"
    app:cardCornerRadius="@dimen/_20sdp"
    app:strokeColor="@color/color_light_grey"
    app:cardElevation="0dp"
    app:strokeWidth="1.5dp">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieView"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="question_face_lottie.json"
                app:lottie_loop="true"
                app:lottie_speed="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtNumber"
                style="@style/Text12RegularDarkGreyStyle"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="#23"
                android:textColor="@color/color_black" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtQuestionTitle"
            style="@style/Text10WhiteStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:gravity="center"
            android:textColor="@color/color_blue" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtOpinions"
            style="@style/Text32RegularBlackStyle"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_minus4sdp"
            android:padding="@dimen/_1sdp"
            android:text="Are you particularly\nhealth conscious?"
            android:textSize="@dimen/_24sdp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAnswerOrSkip"
            style="@style/SmallPurpleButtonStyle"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_weight="1"
            android:padding="@dimen/_1sdp"
            android:text="@string/answer_or_skip" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>

