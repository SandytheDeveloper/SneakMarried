<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base_grey"
    tools:context=".StepsActivity">

    <LinearLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_40sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


        <!--Message view-->
        <RelativeLayout
            android:id="@+id/llMsgView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignBottom="@+id/rlMsg"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:placeholderImage="@drawable/ic_chat_face"
                app:roundAsCircle="true"
                app:roundedCornerRadius="@dimen/_40sdp" />

            <LinearLayout
                android:id="@+id/rlMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_toEndOf="@+id/imgProfile"
                android:background="@drawable/dr_chat_sender_left_bg"
                android:backgroundTint="@color/color_white"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                tools:ignore="RtlSymmetry">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMsg"
                    style="@style/Text14BlueStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="0dp"
                    android:singleLine="true"
                    android:text="@string/welcome_back"
                    android:textSize="@dimen/_13sdp"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMsgDesc"
                    style="@style/Text16RegularBlackStyle"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/_3sdp"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingEnd="@dimen/_7sdp"
                    android:singleLine="false"
                    android:text="Loading!!"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSkipAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_2sdp"
                android:visibility="gone"
                tools:ignore="RelativeOverlap">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtSkipAll"
                    style="@style/Text12RegularGrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skip_all"
                    android:textColor="@color/color_grey"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:backgroundTint="@color/color_grey"
                    android:src="@drawable/dr_ic_skip" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/dr_curved_bg">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnAdd"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:paddingHorizontal="@dimen/_35sdp"
                tools:listitem="@layout/raw_steps_item" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAdd"
                style="@style/Button15RegularBlueStyle"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_32sdp"
                android:background="@drawable/dr_bg_btn_next"
                android:text="@string/continue_"
                android:textColor="@color/color_white"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
