<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base_grey"
    tools:context=".DiscardActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/_10sdp"
        android:src="@drawable/dr_ic_cross"
        android:visibility="visible"
        tools:ignore="RtlSymmetry" />

    <RelativeLayout
        android:id="@+id/rlFirstView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!--MEssage view-->
        <RelativeLayout
            android:id="@+id/llMsgView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="visible">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_alignBottom="@+id/rlMsg"
                    android:layout_alignParentStart="true"
                    app:placeholderImage="@drawable/ic_chat_face"
                    app:roundAsCircle="true"
                    app:roundedCornerRadius="@dimen/_40sdp" />


            <LinearLayout
                android:id="@+id/rlMsg"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgProfile"
                android:backgroundTint="@color/color_white"
                android:background="@drawable/dr_chat_sender_left_bg"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                tools:ignore="RtlSymmetry">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMsg"
                    style="@style/Text14BlueStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="0dp"
                    android:singleLine="false"
                    android:text="@string/psst_between_nyou_and_me"
                    android:textSize="@dimen/_13sdp"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtMsgDesc"
                    style="@style/Text16RegularBlackStyle"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/_3sdp"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingEnd="@dimen/_7sdp"
                    android:singleLine="false"
                    android:text="@string/why_did_you_reject_them"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="RtlSymmetry"
                    android:layout_height="0dp" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/llReasonView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llMsgView"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/dr_curved_bg"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingBottom="@dimen/_10sdp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReasons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                tools:listitem="@layout/raw_reason_list" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnContinue"
                style="@style/Button15RegularButtonPurpleStyle"
                android:layout_alignParentBottom="true"
                android:enabled="false"
                android:hint="@string/continue_"
                android:textColor="@color/color_black"
                android:visibility="visible" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlSecondView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_20sdp"
            android:layout_above="@+id/btnDone"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_100sdp"
                android:background="@drawable/dr_bg_circle"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtOther"
                    style="@style/Text20RegularPurpleStyle"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:digits=" 1234567890!@#$%^&amp;*()_+=qwertyuiopasdfghjklzxcvbnm,./;'[]\|}{:?QWERTYUIOPASDFGHJKLZXCVBNM"
                    android:focusable="true"
                    android:fontFamily="@font/traditionalandexceptionalfont_regular"
                    android:gravity="start"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:layout_height="@dimen/_135sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_grey" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtWordCount"
                    style="@style/Text12RegularGrayStyle"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="@string/_100_words_left"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            style="@style/bottomButtonStyle"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:background="@drawable/dr_bg_btn_light"
            android:clickable="false"
            android:text="@string/done_"
            android:textColor="@color/color_white"
            android:visibility="visible" />


    </RelativeLayout>

</RelativeLayout>

