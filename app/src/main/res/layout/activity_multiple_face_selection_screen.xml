<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".MultipleFaceSelectionScreenActivity">

    <com.commonfriend.custom.CustomHeader
        android:id="@+id/customHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customHeader"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtError"
                style="@style/Text40RegularBlackStyle"
                android:fontFamily="@font/satoshi_regular"
                android:text="@string/let_s_get_you_a_profile_photo"
                android:textSize="@dimen/_35sdp" />

            <!--            <com.facebook.drawee.view.SimpleDraweeView-->
            <!--                android:id="@+id/imgProfile"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="@dimen/_160sdp"-->
            <!--                android:layout_marginTop="@dimen/_10sdp"-->
            <!--                android:adjustViewBounds="true"-->
            <!--                app:actualImageResource="@drawable/dr_home_shimmer"-->
            <!--                app:roundedCornerRadius="@dimen/_10sdp" />-->

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_160sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="@color/color_base_grey"
                app:cardCornerRadius="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/llRecycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtQues"
                    style="@style/Text40RegularBlackStyle"
                    android:fontFamily="@font/satoshi_regular"
                    android:text="@string/which_one_is_you"
                    android:textSize="@dimen/_20sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvImageList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:itemCount="1"
                    tools:listitem="@layout/raw_error_image_item" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        style="@style/Button15RegularButtonPurpleStyle"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_32sdp"
        android:enabled="true"
        android:hint="@string/save"
        android:visibility="gone" />

</RelativeLayout>