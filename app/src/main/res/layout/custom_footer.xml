<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dr_footer_bg"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/_5sdp"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/btnHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgHome"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/ic_home_unselected" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/btnAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgAccount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:src="@drawable/ic_profile_unselected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgAccountDot"
            android:layout_width="@dimen/_7sdp"
            android:layout_height="@dimen/_7sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/ic_red_dot_sky_rounding"
            android:visibility="gone" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btnChat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgChat"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:src="@drawable/ic_chat_unselected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgChatDot"
            android:layout_width="@dimen/_7sdp"
            android:layout_height="@dimen/_7sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:src="@drawable/ic_red_dot_sky_rounding"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btnSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSettings"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/ic_setting_idle" />


    </LinearLayout>

</LinearLayout>
