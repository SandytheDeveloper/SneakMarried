<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:paddingHorizontal="@dimen/_5sdp"
    android:paddingVertical="@dimen/_5sdp">

    <!--   ReceiverMessage-->
    <LinearLayout
        android:id="@+id/llReceiverMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_45sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dr_chat_sender_left_bg"
            android:backgroundTint="@color/color_black"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            tools:ignore="UselessParent">

            <View
                android:id="@+id/viewReceiverTop"
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp"
                app:layout_constraintEnd_toStartOf="@+id/llReceiverTime"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtReceiverMessage"
                style="@style/Text12RegularDarkGreyStyle"
                android:layout_width="wrap_content"
                android:gravity="start"
                android:paddingVertical="@dimen/_2sdp"
                android:singleLine="false"
                android:text="Thanks"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toStartOf="@+id/llReceiverTime"
                app:layout_constraintTop_toBottomOf="@+id/viewReceiverTop"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:id="@+id/llReceiverTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/txtReceiverMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtReceiverMessage">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtReceiverTime"
                    style="@style/Text09RegularGrayStyle"
                    android:layout_width="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_1sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="11:11 am"
                    android:textColor="@color/color_grey"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStatus"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:padding="@dimen/_1sdp"
                    android:paddingStart="@dimen/_2sdp"
                    android:src="@drawable/ic_double_tick"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llReceiverTime2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/txtReceiverMessage"
                app:layout_constraintTop_toBottomOf="@+id/txtReceiverMessage">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtReceiverTime2"
                    style="@style/Text09RegularGrayStyle"
                    android:layout_width="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_1sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="11:11 am"
                    android:textColor="@color/color_grey"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStatus2"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:padding="@dimen/_1sdp"
                    android:paddingStart="@dimen/_2sdp"
                    android:src="@drawable/ic_double_tick"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!--    SenderImage SenderName SenderMessage-->
    <LinearLayout
        android:id="@+id/llSenderMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llReceiverMessage"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/llSenderProfile"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_2sdp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgSenderProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:placeholderImage="@color/color_base_grey"
                app:roundAsCircle="true"
                app:roundedCornerRadius="@dimen/_40sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSenderInits"
                style="@style/Text18RegularPurpleStyle"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_7sdp" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rlSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dr_chat_sender_left_bg"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:paddingEnd="@dimen/_10sdp"
            tools:ignore="RtlSymmetry">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSenderName"
                style="@style/Text14BlueStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingStart="@dimen/_7sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="0dp"
                android:singleLine="true"
                android:text="Kanika Mahajan"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewSenderTop"
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/txtSenderMessage"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSenderMessage"
                style="@style/Text16RegularBlackStyle"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_3sdp"
                android:paddingStart="@dimen/_7sdp"
                android:paddingEnd="@dimen/_7sdp"
                android:singleLine="false"
                android:text="i am Fine"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewSenderTop"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSenderTime"
                style="@style/Text09RegularGrayStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="bottom|end"
                android:paddingHorizontal="@dimen/_1sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:singleLine="true"
                android:text="08:47 am"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/txtSenderMessage"
                app:layout_constraintStart_toEndOf="@+id/txtSenderMessage"
                app:layout_constraintTop_toTopOf="@+id/txtSenderMessage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSenderTime2"
                style="@style/Text09RegularGrayStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_minus5sdp"
                android:gravity="bottom|end"
                android:padding="@dimen/_1sdp"
                android:singleLine="true"
                android:text="08:47 am"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSenderMessage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!--    Text Left Member-->
    <LinearLayout
        android:id="@+id/llLeftMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llSenderMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/dr_chat_sender_left_bg"
        android:backgroundTint="@color/color_light_blue"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtLeftMember"
            style="@style/Text12RegularDarkGreyStyle"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:singleLine="false"
            android:text="@string/common_friend_left_the_group"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

</RelativeLayout>