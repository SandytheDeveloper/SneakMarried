<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/receiverBtn"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    android:layout_marginTop="@dimen/_8sdp"
    app:cardBackgroundColor="@color/color_white"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgBtnProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:placeholderImage="@color/color_green"
                app:roundAsCircle="true"
                app:roundedCornerRadius="@dimen/_40sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtUserInits"
                style="@style/Text18RegularPurpleStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="SP"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtName"
            style="@style/Text14RegularWhitStyle"
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:text="Her"
            android:singleLine="true"
            android:textColor="@color/color_blue" />


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>