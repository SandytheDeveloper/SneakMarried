<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".PriorityActivity">

    <com.commonfriend.custom.CustomHeader
        android:id="@+id/customHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subTitle"
        style="@style/Text10RegularGrayStyle"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_minus10sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customHeader"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:text="@string/drag_or_reorder_the_attributes_below_based_on_your_priority"
        android:textColor="@color/color_dark_grey" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnContinue"
        android:layout_below="@+id/subTitle"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_25sdp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFactor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/raw_priority_view" />

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        style="@style/Button12RegularPurpleStyle"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:elevation="0dp"
        android:shadowColor="@color/transparent_"
        android:background="@drawable/dr_bg_btn_light"
        android:text="@string/strcontinue"
        android:textColor="@color/color_white" />

</RelativeLayout>