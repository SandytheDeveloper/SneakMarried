<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".MobileNumberActivity">


    <com.commonfriend.custom.CustomHeader
        android:id="@+id/customHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customHeader"
        android:paddingHorizontal="@dimen/_26sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtMobileNumber"
                style="@style/Text35RegularBlackStyle"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="@dimen/_minus11sdp"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingTop="@dimen/_20sdp"
                android:text="@string/what_s_your_mobile_number" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSMSWhatsUp"
                style="@style/Text12RegularDarkGreyStyle"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="@string/if_required_i_shall_use_this_number_nto_get_in_touch" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtCountryCode"
                style="@style/EditText25RegularBlackStyle"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@null"
                android:drawableEnd="@drawable/dr_ic_drop_black"
                android:fontFamily="@font/satoshi_regular"
                android:text="India (+91)"
                android:textColorHint="@color/color_grey" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@color/color_edit_text_view" />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp">


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtNumber"
                    style="@style/EditText25RegularBlackStyle"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/imgContinue"
                    android:background="@null"
                    android:digits="0123456789"
                    android:fontFamily="@font/satoshi_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_your_mobile_number"
                    android:imeOptions="actionDone"
                    android:inputType="number|textNoSuggestions"
                    android:maxLength="10"
                    android:textColorHint="@color/color_dark_grey"
                    android:textSize="@dimen/_15sdp" />




                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgContinue"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dr_ic_forward" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@color/color_edit_text_view" />




            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtVerificationCode"
                style="@style/Text12RegularGrayStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="@string/i_will_send_you_a_text_with_verification_code"
                android:textSize="@dimen/_11sdp" />


            <LinearLayout
                android:id="@+id/llInTouchOnWhatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_30sdp"
                android:paddingStart="@dimen/_10sdp"
                android:orientation="horizontal"
                tools:ignore="RtlSymmetry">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgInTouchOnWhatsapp"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:saveEnabled="true"
                    android:src="@drawable/dr_square_check"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtInTouchOnWhatsapp"
                    style="@style/Text12RegularGrayStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/color_blue"
                    android:text="@string/its_alright_to_get_in_touch_on_whatsapp"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>



        </LinearLayout>




    </androidx.core.widget.NestedScrollView>


</RelativeLayout>



