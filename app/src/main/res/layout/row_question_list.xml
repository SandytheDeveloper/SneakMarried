<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    app:cardBackgroundColor="@color/color_base_grey"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="0dp"
    app:strokeColor="@color/color_light_grey"
    app:strokeWidth="@dimen/_1sdp">

    <RelativeLayout
        android:id="@+id/rlMainView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="@dimen/_120sdp"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/llRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/dr_bg_lightgray"
            android:backgroundTint="@color/color_blue"
            android:gravity="center"
            android:visibility="gone"
            android:paddingHorizontal="@dimen/_4sdp"
            android:paddingVertical="@dimen/_3sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgStar"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/dr_white_star" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtRating"
                style="@style/Text12RegularWhitStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                android:text="0.0"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_toStartOf="@id/llAnsweredView"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtCount"
                style="@style/Text10RegularDarkGreyStyle"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textColor="@color/color_black" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtQuestion"
                style="@style/Text24RegularBlackStyle"
                android:gravity="start"
                android:padding="@dimen/_1sdp"
                android:paddingStart="@dimen/_1sdp"
                android:singleLine="false"
                android:lineSpacingMultiplier="0.9"
                android:textSize="@dimen/_22sdp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAnsweredView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/dr_bg_white_circle"
            android:paddingHorizontal="@dimen/_5sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAnswered"
                style="@style/Text12RegularDarkGreyStyle"
                android:layout_width="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textColor="@color/color_black" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>



